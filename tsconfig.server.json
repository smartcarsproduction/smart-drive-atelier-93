{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist-server",
    "rootDir": ".",
    "resolveJsonModule": true,
    "declaration": false,
    "noEmit": false
  },
  "include": [
    "server/**/*",
    "src/lib/db-services.ts",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-server"
  ]
}